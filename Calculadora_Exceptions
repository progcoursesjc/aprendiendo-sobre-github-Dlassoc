class Divx0(Exception):
  def __init__(self, mensaje):
    self.mensaje = mensaje
  
try:
  raise Divx0("Gravísimo")
except:
  print("")


class Lista_sin_posicion(Exception):
  def __init__(self, mensaje):
    self.mensaje = mensaje
  
try:
  raise Lista_sin_posicion("Gravísimo")
except:
  print("")


class Faltan_posiciones(Exception):
  def __init__(self, mensaje):
    self.mensaje = mensaje
  
try:
  raise Faltan_posiciones("Gravísimo")
except:
  print("")

class Operador_desconocido(Exception):
  def __init__(self, mensaje):
    self.mensaje = mensaje
  
try:
  raise Operador_desconocido("Gravísimo")
except:
  print("")

  
class Calculadora:
    def __init__ (self):
        self.resultado = 0
    
    def ingresar_datos(self):
        operaciones = ["+", "-", "/", "*"]
        a  = input("Ingrese numeros y operacion a realizar: ")
        j = a.split()
        print(j)
        if a != "terminar":
              if j == []:
                raise Lista_sin_posicion ("La lista está vacia, ingrese valores...")
              if (len(j) <= 2 or len(j) <= 1 or len (j) >3 ):
                raise Faltan_posiciones("Ingrese los valores y operacion por separado: 5 + 4")
              elif j[1] not in operaciones:
                print(j()[1])
                raise Operador_desconocido ("Ingrese operador valido")
              elif j[1] == "+":
                suma = int(j[0]) + int(j[2])
                print(suma)
                self.ingresar_datos()
              elif j[1] == "-":
                resta = int(j[0]) - int(j[2])
                print(resta)
                self.ingresar_datos()
              elif j[1] == "*":
                multiplicación = int(j[0]) * int(j[2])
                print(multiplicación)
                self.ingresar_datos()
              elif j[1] == "/":
                if j[2] == "0":
                  raise Divx0 ("Division por 0...")
                dividir = int(j[0]) / int(j[2])
                print(dividir)
                self.ingresar_datos()
            
        print("Programa ha finalizado con exito")

c = Calculadora()
c.ingresar_datos()
